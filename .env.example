# Adapter selection: MOCK or YOUTUBE
CHAT_ADAPTER=MOCK

# Mock (FileReplayAdapter)
MOCK_FILE_PATH=./data/chat.json
MOCK_POLLING_INTERVAL=1000

# YouTube (YouTubeLiveAdapter)
YOUTUBE_API_KEY=YOUR_API_KEY_HERE
YOUTUBE_VIDEO_ID=YOUR_VIDEO_ID_HERE
YOUTUBE_LIVE_CHAT_ID=
YOUTUBE_POLLING_INTERVAL=1000

# ========================================
# Memory System (Day 7)
# ========================================

# Database URL for Prisma (SQLite)
# Relative path creates database in prisma/dev.db
DATABASE_URL="file:./dev.db"

# OpenAI API Key for embeddings and LLM
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# ChromaDB URL (default: http://localhost:8000)
# Start ChromaDB with: docker run -d -p 8000:8000 chromadb/chroma:latest
CHROMA_URL=http://localhost:8000

# ========================================
# VTube Studio Integration (Day 12)
# ========================================

# Enable VTube Studio integration (true/false)
VTS_ENABLED=false

# VTube Studio API connection
VTS_HOST=localhost
VTS_PORT=8001

# Authentication token (obtained on first connection)
# Leave empty for first-time setup, then copy the token from logs
VTS_AUTH_TOKEN=

# Lip sync settings
VTS_VOLUME_SCALE=1.5

# Expression hotkey IDs (from VTube Studio)
# Use VTube Studio to find your model's hotkey IDs
# To find hotkey IDs: VTube Studio > Settings > Hotkeys > Click on a hotkey to see its ID
VTS_HOTKEY_NEUTRAL=
VTS_HOTKEY_HAPPY=
VTS_HOTKEY_SAD=
VTS_HOTKEY_ANGRY=
VTS_HOTKEY_EXCITED=
